.fab-area {
  position: fixed;
  bottom: 110rpx;
  right: 30rpx;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.fab {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: linear-gradient(135deg, #1a73e8, #5c9ef5);
  box-shadow: 0 12px 20px rgba(26, 115, 232, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: auto;
}

.fab__icon {
  color: #ffffff;
  font-size: 44rpx;
}

.fab-menu {
  position: fixed;
  bottom: 260rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  pointer-events: auto;
}

.fab-menu__item {
  background-color: #ffffff;
  color: #1a73e8;
  padding: 16rpx 28rpx;
  border-radius: 999rpx;
  box-shadow: 0 10px 20px rgba(15, 23, 42, 0.12);
  font-size: 26rpx;
}
