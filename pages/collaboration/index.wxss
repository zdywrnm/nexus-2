.collaboration-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.collab-header {
  display: flex;
  margin: 32rpx 32rpx 0;
  padding: 12rpx;
  background-color: #f1f5f9;
  border-radius: 999rpx;
  gap: 12rpx;
}

.collab-tab {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  border-radius: 999rpx;
  font-size: 28rpx;
  color: #64748b;
  background-color: transparent;
}

.collab-tab--active {
  background: linear-gradient(135deg, #1a73e8, #4f8efa);
  color: #ffffff;
  box-shadow: 0 10rpx 24rpx rgba(26, 115, 232, 0.25);
}

.project-manage-card,
.joined-card {
  margin-bottom: 24rpx;
  border-radius: 28rpx;
  background-color: #ffffff;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.12);
}

.project-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a2a4a;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.status-recruiting {
  background: linear-gradient(135deg, #22c55e, #4ade80);
}

.status-ongoing {
  background: linear-gradient(135deg, #1a73e8, #4f8efa);
}

.status-closed {
  background: linear-gradient(135deg, #94a3b8, #cbd5f5);
}

.applicant-section {
  margin-top: 24rpx;
}

.applicant-card {
  margin-top: 16rpx;
  padding: 20rpx;
  border-radius: 24rpx;
  background-color: #f8fafc;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.applicant-name {
  font-weight: 600;
  font-size: 28rpx;
  color: #1a2a4a;
}

.applicant-actions {
  display: flex;
  gap: 12rpx;
}

.small {
  padding: 12rpx 20rpx;
  font-size: 24rpx;
}
