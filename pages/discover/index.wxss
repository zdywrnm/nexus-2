.discover-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.hero {
  padding: 24rpx 32rpx 0;
  background: linear-gradient(180deg, #f3f8ff 0%, #f8fafc 100%);
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(26, 115, 232, 0.08);
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 999rpx;
  padding: 12rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(26, 115, 232, 0.08);
}

.icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1f2933;
}

.top-tags {
  display: flex;
  margin-top: 24rpx;
  gap: 20rpx;
}

.top-tag {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  border-radius: 24rpx;
  font-weight: 600;
  color: #64748b;
  background-color: rgba(100, 116, 139, 0.1);
}

.top-tag--active {
  color: #ffffff;
  background: linear-gradient(135deg, #1a73e8, #4f8efa);
  box-shadow: 0 14rpx 24rpx rgba(26, 115, 232, 0.25);
}

.filter-entry {
  margin-top: 28rpx;
  padding: 20rpx 24rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #1a2a4a;
  box-shadow: 0 12rpx 32rpx rgba(148, 163, 184, 0.25);
}

.filter-entry__desc {
  flex: 1;
  margin: 0 16rpx;
  color: #64748b;
  font-size: 24rpx;
}

.filter-entry__icon {
  font-size: 28rpx;
  color: #94a3b8;
}

.discover-content {
  flex: 1;
  padding-bottom: 220rpx;
}

.project-card,
.job-card,
.talent-card {
  margin-bottom: 24rpx;
  border-radius: 28rpx;
  background: #ffffff;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.12);
}

.project-card .project-title,
.job-card .job-title,
.talent-card .talent-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a2a4a;
}

.tag-wrapper {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0 16rpx;
  gap: 12rpx;
}

.tag-wrapper .tag {
  background-color: rgba(26, 115, 232, 0.08);
  color: #1a73e8;
  border-radius: 999rpx;
  padding: 12rpx 20rpx;
  font-size: 22rpx;
}

.meta-line {
  font-size: 24rpx;
  color: #475569;
  margin-bottom: 20rpx;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.contact-pill {
  background: linear-gradient(135deg, #1a73e8, #4f8efa);
  color: #ffffff;
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.job-company {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 8rpx;
}

.job-salary {
  font-size: 28rpx;
  font-weight: 700;
  color: #f97316;
}

.talent-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.talent-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
}

.talent-tags {
  color: #64748b;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a2a4a;
}

.filter-close {
  color: #1a73e8;
  font-size: 26rpx;
}
