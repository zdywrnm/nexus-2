.forum-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.forum-header {
  padding: 24rpx 32rpx 0;
  background: linear-gradient(180deg, #f3f8ff 0%, #f8fafc 100%);
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
}

.filter-tags {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
  flex-wrap: wrap;
}

.post-card {
  margin-bottom: 24rpx;
  border-radius: 28rpx;
  background: #ffffff;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.12);
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.post-type {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a73e8;
}

.post-title {
  margin-top: 12rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #1a2a4a;
}

.post-meta {
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.relation-tag {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background-color: rgba(26, 115, 232, 0.08);
  color: #1a73e8;
  font-size: 24rpx;
}

.post-excerpt {
  margin-top: 16rpx;
  color: #475569;
  font-size: 26rpx;
  line-height: 1.6;
}
