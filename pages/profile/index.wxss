.profile-page {
  min-height: 100vh;
  padding: 32rpx;
}

.profile-hero {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.profile-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 48rpx;
  box-shadow: 0 16rpx 32rpx rgba(26, 115, 232, 0.25);
}

.profile-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a2a4a;
}

.profile-subtitle {
  margin-top: 8rpx;
  color: #64748b;
  font-size: 26rpx;
}

.status-card,
.menu-card {
  margin-bottom: 24rpx;
  border-radius: 28rpx;
  background: #ffffff;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.12);
  padding: 24rpx;
}

.status-list {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.status-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #1a2a4a;
}

.status-label {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.status-label.success {
  background-color: rgba(34, 197, 94, 0.12);
  color: #16a34a;
}

.status-label.pending {
  background-color: rgba(249, 115, 22, 0.12);
  color: #f97316;
}

.status-label.info {
  background-color: rgba(59, 130, 246, 0.12);
  color: #2563eb;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e5e7eb;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a2a4a;
}

.menu-arrow {
  font-size: 36rpx;
  color: #94a3b8;
}
