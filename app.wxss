page {
  background-color: #f5f6f9;
  color: #1f2933;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 8px;
  color: #1a2a4a;
}

.card {
  background-color: #ffffff;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 6px 16px rgba(15, 23, 42, 0.08);
}

.tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 4px 10px;
  margin: 0 8px 8px 0;
  border-radius: 999px;
  font-size: 12px;
  background: #eff4ff;
  color: #1a73e8;
}

.badge {
  display: inline-flex;
  align-items: center;
  padding: 2px 8px;
  border-radius: 999px;
  font-size: 10px;
  background-color: #e8f3ff;
  color: #1a73e8;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-start {
  display: flex;
  align-items: center;
}

.text-secondary {
  color: #6b7280;
  font-size: 12px;
}

.scrollable-content {
  padding: 16px;
}

.filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(15, 23, 42, 0.45);
  display: flex;
  align-items: flex-end;
  z-index: 800;
}

.filter-panel__inner {
  background-color: #ffffff;
  width: 100%;
  max-height: 80vh;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  padding: 20px 16px 40px;
  overflow-y: auto;
}

.filter-section {
  margin-bottom: 20px;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.filter-chip {
  padding: 8px 12px;
  border-radius: 999px;
  background-color: #f1f5f9;
  font-size: 12px;
  color: #1f2937;
}

.filter-chip--active {
  background: linear-gradient(135deg, #1a73e8, #5c9ef5);
  color: #ffffff;
  box-shadow: 0 4px 12px rgba(26, 115, 232, 0.3);
}

.bottom-action-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 12px 16px 24px;
  background-color: #ffffff;
  box-shadow: 0 -6px 20px rgba(15, 23, 42, 0.1);
  display: flex;
  gap: 12px;
}

.primary-button {
  flex: 1;
  background: linear-gradient(135deg, #1a73e8, #4f8efa);
  color: #ffffff;
  border-radius: 999px;
  padding: 12px;
  font-weight: 600;
  text-align: center;
}

.secondary-button {
  flex: 1;
  background-color: #f1f5f9;
  color: #1f2933;
  border-radius: 999px;
  padding: 12px;
  font-weight: 600;
  text-align: center;
}

.section-subtitle {
  font-size: 13px;
  color: #4b5563;
  margin-top: 4px;
}

.list-divider {
  height: 1px;
  background-color: #e5e7eb;
  margin: 16px 0;
}

.empty-state {
  text-align: center;
  color: #9ca3af;
  padding: 24px 0;
}
